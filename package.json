{
  "name": "ui-auto-test",
  "version": "1.0.0",
  "description": "基于Stagehand的UI自动测试工具，支持Excel测试用例解析",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:compiled": "node dist/index.js",
    "test": "tsx src/index.ts",
    "execute:excel": "tsx src/index.ts --excel excel/test-cases-template.xlsx --headless false --case-id TC-001",
    "execute:json:tc-003": "tsx src/index.ts --data data/test-cases-template.json --headless false --case-id TC-003",
    "execute:onlyapi:tc-003": "yarn execute:json:tc-003 --only-api",
    "record:api:tc-003": "yarn execute:json:tc-003 --record-api --case-id TC-003",
    "mock-validate:api:tc-003": "yarn execute:json:tc-003 --only-api --mock-api",
    "mock:api:tc-003": "yarn execute:json:tc-003 --mock-api",
    "execute:json": "tsx src/index.ts --data data/test-cases-template.json --headless false",
    "execute:json:failed": "tsx src/index.ts --data data/test-cases-template.json --headless false --only-failed",
    "excel:merge": "tsx src/index.ts --excel excel/test-cases-template.xlsx --merge-to-json",
    "excel:merge:json": "tsx src/index.ts --excel excel/test-cases-template.xlsx --data data/test-cases-template.json --merge-to-json",
    "record:json:tc-004": "tsx src/index.ts --data data/test-cases-template.json --headless false --record --case-id TC-004",
    "record:url": "tsx src/index.ts --record --headless false",
    "delete:case": "tsx src/index.ts --data data/test-cases-template.json --delete-case",
    "dev": "tsx watch src/index.ts",
    "llm:setup": "bash scripts/setup-ollama.sh",
    "debug": "DEBUG=true tsx src/index.ts --interactive --debug --headless false",
    "stop-recording": "mkdir -p records && touch records/.stop-recording"
  },
  "keywords": [
    "ui-testing",
    "automation",
    "stagehand",
    "playwright",
    "excel"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^3.0.19",
    "@browserbasehq/stagehand": "^3.0.8",
    "@playwright/test": "^1.58.0",
    "ai": "^6.0.49",
    "ai-sdk-ollama": "^3.3.0",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "ollama-ai-provider-v2": "^3.0.2",
    "undici": "^7.19.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
